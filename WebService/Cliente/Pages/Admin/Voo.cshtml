@page
@model AdminVooModel
@{
    ViewData["Title"] = "Admin";
}
<h2>@ViewData["Title"]</h2>
<h3>@Model.Message</h3>

<form method="post" >
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Insira Voo</legend>
        <div>
            <label for="CompanyName">Nome:</label>
            <input type="date" name="data" value="" />
        </div>
        <div>
            <label for="ContactName">Origem:</label>
            <input type="text" name="origem" value="" />
        </div>
        <div>
            <label for="ContactName">Destino:</label>
            <input type="text" name="destino" value="" />
        </div>
        <div>
            <label for="ContactName">Companhia:</label>
            <input type="text" name="companhia" value="" />
        </div>
        <div>
            <label for="Employees">Preço por Passagem:</label>
            <input type="number" name="preco" value="0" />
        </div>
        <div>
            <label for="Employees">Assentos Vagos:</label>
            <input type="number" name="assentosVagos" value="0" />
        </div>
        <div id="submit">
            <label>&nbsp;</label>
            <input type="submit" value="Submit" class="submit" disabled/>
        </div>
    </fieldset>
</form>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script>
    $(function () {
        $("#submit").hover(function () {
            if($("input[type=date]").val()!=""){
                $("input[type=submit]").prop("disabled",false)
            }
            else{
                $("input[type=submit]").prop("disabled",true)
            }
        });
    });
</script>

<h2>Voos registrados</h2>
<table class="table">
    <thead>
        <tr>
            <th>Data</th>
            <th>Origem</th>
            <th>Destino</th>
            <th>Companhia Aérea</th>
            <th>Preço por Passagem</th>
            <th>Assentos Vagos</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var voo in @Model.voos)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => voo.data)</td>
                <td>@voo.origem</td>
                <td>@voo.destino</td>
                <td>@voo.companhia</td>
                <td>@voo.preco</td>
                <td>@voo.assentosVagos</td>
            </tr>
        }
    </tbody>
</table>
